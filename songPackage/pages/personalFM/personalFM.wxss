/* 页面容器 */
.personalFMContainer {
    height: 100%;
    background-color: #8a8a8a;
    display: flex;
    flex-direction: column;
    align-items: center;
}

/* 专辑图片区域 */
.blurPicContainer {
    width: 600rpx;
    height: 600rpx;
    margin-top: 100rpx;
}

.blurPicContainer image {
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
    box-shadow: 0 0 40rpx -20rpx #252525;
}

/* 歌曲信息容器 */
.songInfo {
    margin-top: 50rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.songInfo .name {
    color: #fff;
    font-size: 38rpx;
}

.songInfo .artists {
    color: rgba(255, 255, 255, 0.5);
    font-size: 24rpx;
}

/* 底部控制区域 */
.musicControl {
    position: absolute;
    bottom: 80rpx;
    left: 0;
    width: 100%;
    display: flex;

}

.musicControl text {
    width: 20%;
    height: 120rpx;
    line-height: 120rpx;
    text-align: center;
    color: #fff;
    font-size: 50rpx;
}

.musicControl text.big {
    font-size: 100rpx;
}

.musicControl text.size {
    font-size: 73rpx;
}

