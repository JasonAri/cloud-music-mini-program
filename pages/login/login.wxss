/* pages/login/login.wxss */
.wrapper {
  position: relative;
  z-index: 90;
  padding-bottom: 40rpx;
}

.left-top-sign {
  font-size: 120rpx;
  color: #f8f8f8;
  position: relative;
  left: -16rpx;
}

.welcome {
  position: relative;
  left: 50rpx;
  top: -90rpx;
  font-size: 46rpx;
  color: #555;
}

.input-content {
  padding: 0 60rpx;
  overflow: hidden;
}

/* 输入框 */
.input-item {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  padding: 0 30rpx;
  background: #f8f6fc;
  height: 120rpx;
  border-radius: 4px;
  margin-bottom: 50rpx;
}

.input-item .tit {
  height: 50rpx;
  line-height: 56rpx;
  font-size: 30rpx;
  color: #606266;
}

.input-item input {
  height: 60rpx;
  font-size: 30rpx;
  color: #303133;
  width: 100%;
}

/* 验证码输入框包裹 */
.input-captcha-wrapper {
  display: flex;
  width: 100%;
  height: 120rpx;
  border-radius: 4px;
}

.input-captcha-wrapper .input-item {
  margin-right: 30rpx;
}

/* 获取验证码的按钮 */
.get-captcha-btn {
  width: 250rpx !important;
  height: 110rpx;
  line-height: 110rpx;
  background: #fff;
  border: 1rpx solid #d43c33;
  color: #d43c33;
  font-size: 30rpx;
  font-weight: 450;
  padding: 0;
  top: 5rpx;
}

.get-captcha-btn2 {
  border-color: #d2d2d2;
}

/* 登录按钮 */
.confirm-btn {
  width: 630rpx !important;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 50rpx;
  margin-top: 70rpx;
  background: #d43c33;
  color: #fff;
  font-size: 32rpx;
  padding: 0;
}

/* 忘记密码 */
.forget-section {
  font-size: 28rpx;
  color: #4399fc;
  text-align: center;
  margin-top: 40rpx;
}

/* 游客登录 */
.visitor-section,
.register-section {
  position: absolute;
  left: 0;
  bottom: 120rpx;
  font-size: 28rpx;
  color: #4399fc;
  width: 100%;
  text-align: center;
  margin-top: 40rpx;
}

/* 注册账号 */
.register-section {
  color: black;
  bottom: 50rpx;
}

.register-section text {
  color: #4399fc;
  margin-left: 10rpx;
}